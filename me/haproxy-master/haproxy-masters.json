{
  "id": "/haproxy-masters",
  "instances": 1,
  "cpus": 0.1,
  "mem": 128,
  "disk": 0,
  "gpus": 0,
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "container": {
    "type": "DOCKER",
            "volumes": [
          {
              "containerPath": "/usr/local/etc/haproxy",
              "hostPath": "/root/haproxy",
              "mode": "RW"
          }
      ],
    "docker": {
      "image": "haproxy",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 0,
          "servicePort": 10113,
          "protocol": "tcp",
          "name": "http"
        }
      ],
      "privileged": false,
      "forcePullImage": false
    }
  },
  "upgradeStrategy": {
    "minimumHealthCapacity": 1,
    "maximumOverCapacity": 1
  },
  "unreachableStrategy": {
    "inactiveAfterSeconds": 300,
    "expungeAfterSeconds": 600
  },
  "killSelection": "YOUNGEST_FIRST",
  "requirePorts": true,
  "acceptedResourceRoles":["slave_public"] 
}
